<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bamboo">
    <!-- 允许联网 -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".UI.WordListActivity"
            android:exported="true" />
        <!-- android:theme="@style/Theme.Bamboo"> -->
        <activity
            android:name=".UI.FileLoadEvaluationActivity"
            android:exported="true" />
        <activity
            android:name=".UI.PhotoLoadEvaluationActivity"
            android:exported="true" />
        <activity
            android:name=".UI.AudioActivity"
            android:exported="true" />
        <activity
            android:name=".UI.BaseActivity"
            android:exported="true" />
        <activity
            android:name=".UI.TextTextEvaluationActivity"
            android:exported="true" />
        <activity
            android:name=".UI.BookIntroductionActivity"
            android:exported="true" />
        <activity
            android:name=".UI.BookReadingActivity"
            android:exported="true" />
        <activity
            android:name=".UI.ReadingComprehensionActivity"
            android:exported="true" />
        <activity
            android:name=".UI.WordPreviewActivity"
            android:exported="true" />
        <activity
            android:name=".UI.ReadingFinishingActivity"
            android:exported="true" />
        <activity
            android:name=".UI.ChooseLanguageActivity"
            android:exported="true" />
        <activity
            android:name=".UI.ResultEvaluationActivity"
            android:exported="true" />
        <activity
            android:name=".UI.MainActivity"
            android:exported="true" />
        <activity android:name=".UI.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UI.RegisterActivity" />

        <provider
            android:name="cn.bmob.v3.util.BmobContentProvider"
            android:authorities="com.example.bamboo.BmobContentProvider">
        </provider>
    </application> <!-- 获取GSM（2g）、WCDMA（联通3g）等网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- 获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" /> <!-- 保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" /> <!-- 获取sd卡写的权限，用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- 允许读取手机状态 用于创建BmobInstallation -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>