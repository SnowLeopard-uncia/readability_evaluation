<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.bamboo">
    <!-- 保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".UI.AudioDialogActivity"
            android:theme="@style/Theme.AppCompat.Dialog"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".UI.PathActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".UI.VideoPlayActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".UI.VideoIntroductionActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".UI.WordListActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".UI.FileLoadEvaluationActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".UI.PhotoLoadEvaluationActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".UI.AudioActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".UI.BaseActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".UI.TextTextEvaluationActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".UI.BookIntroductionActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".UI.BookReadingActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".UI.ReadingComprehensionActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".UI.WordPreviewActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".UI.ReadingFinishingActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".UI.ChooseLanguageActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".UI.ResultEvaluationActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".UI.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity android:name=".UI.LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.RegisterActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>

        <provider
            android:name="cn.bmob.v3.util.BmobContentProvider"
            android:authorities="com.example.bamboo.BmobContentProvider" />
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.bamboo.UI.FileLoadEvaluationActivity.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <service
            android:name=".service.MusicService"
            android:enabled="true"
            android:exported="true" />
    </application> <!-- 获取sd卡写的权限，用于文件上传和下载 -->
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" /> <!-- 允许读取手机状态 用于创建BmobInstallation -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> <!-- 在sdcard中创建/删除文件的权限 -->
    <uses-permission
        android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

</manifest>