<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CircleRelativeLayoutLayout">
        <attr name="background_color" format="color" />
        <attr name="background_alpha" format="integer" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension"/>
        <attr name="border_color" format="color"/>
    </declare-styleable>

    <!--    声明样式-->
    <declare-styleable name="inputView">
        <!--        输入框前图标-->
        <attr name="input_icon" format="reference"></attr>
        <!--        输入框提示-->
        <attr name="input_hint" format="string"></attr>
        <!--        是否密码-->
        <attr name="is_password" format="boolean"></attr>

    </declare-styleable>
</resources>


