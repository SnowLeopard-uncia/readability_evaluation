<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:circle="http://schemas.android.com/apk/res-auto"
   android:background="@color/transparent"
android:paddingVertical="23dp"
    android:paddingHorizontal="20dp"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        >


    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"

        android:layout_weight="3"

        android:orientation="vertical"
        android:paddingLeft="10dp">


        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="级别"
            android:textSize="16sp"
            android:textStyle="bold"

            circle:layout_constraintStart_toStartOf="@+id/textView5"
            circle:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_word_menu_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/A"
            android:textSize="16sp"
            android:textColor="@color/white"

            circle:layout_constraintStart_toEndOf="@+id/textView8"
            circle:layout_constraintTop_toTopOf="@+id/textView8" />
        <!--        <TextView-->
        <!--            android:id="@+id/tv_word_list_title"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:text="单词本标题&#45;&#45;词汇"-->
        <!--            android:layout_marginHorizontal="5dp"-->
        <!--            android:layout_marginTop="15dp"-->
        <!--            circle:layout_constraintStart_toStartOf="parent"-->
        <!--            circle:layout_constraintTop_toTopOf="parent" />-->

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="17dp"
            android:layout_marginHorizontal="5dp"
            android:text="适合年龄："
            circle:layout_constraintStart_toStartOf="parent"
            circle:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/tv_suit_age_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            circle:layout_constraintStart_toEndOf="@+id/textView6"
            circle:layout_constraintTop_toTopOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="8dp"
            android:text="单词总数："
            circle:layout_constraintStart_toStartOf="parent"
            circle:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/tv_word_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            circle:layout_constraintStart_toEndOf="@+id/textView5"
            circle:layout_constraintTop_toTopOf="@+id/textView5" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginVertical="19dp"
            android:text=" 学习 "
            android:background="@drawable/bg_btn_word_book"
            circle:layout_constraintStart_toStartOf="@+id/textView5"
            circle:layout_constraintTop_toBottomOf="@+id/textView5" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>