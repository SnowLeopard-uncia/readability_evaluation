<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context=".UI.VideoIntroductionActivity">

    <include layout="@layout/nav_bar" />

    <ImageView
        android:id="@+id/iv_book"
        android:layout_width="129.05dp"
        android:layout_height="168.21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.157"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.158" />

    <LinearLayout
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.450"
        app:layout_constraintStart_toEndOf="@id/iv_book"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.150">

        <TextView
            android:id="@+id/tv_book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="@dimen/book_introduction_textSize" />

        <TextView
            android:id="@+id/tv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/book_introduction_textSize" />

        <TextView
            android:id="@+id/tv_suit_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/book_introduction_textSize" />

        <TextView
            android:id="@+id/tv_director"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/book_introduction_textSize" />

        <TextView
            android:id="@+id/tv_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/book_introduction_textSize" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_brief_introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:maxEms="14"
                android:ellipsize="end"
                android:textColor="@color/text_color"
                android:textSize="@dimen/book_introduction_textSize" />

            <TextView
                android:id="@+id/tv_show_more"
                android:layout_width="38dp"
                android:layout_height="18dp"
                android:background="@drawable/bg_dialog"
                android:layout_marginTop="5dp"
                android:text="@string/show_more"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:textSize="13sp"
                android:layout_below="@id/tv_brief_introduction"
                android:layout_alignRight="@id/tv_brief_introduction"/>

        </RelativeLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btn_enter"
        android:layout_width="280.35dp"
        android:layout_height="60.52dp"
        android:background="@drawable/bg_btn_book_reading"
        android:text="@string/enter_video"
        android:textColor="@color/text_color"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_book"
        app:layout_constraintVertical_bias="0.562" />
</androidx.constraintlayout.widget.ConstraintLayout>