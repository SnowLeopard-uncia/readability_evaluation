<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context=".UI.RegisterActivity">

    <EditText
        android:id="@+id/et_name"
        android:layout_width="295.3dp"
        android:layout_height="54.1dp"
        android:background="@drawable/login_input_edit_shape"
        android:drawableLeft="@drawable/name_icon"
        android:drawablePadding="45dp"
        android:hint="    请输入昵称"
        android:textColorHint="@color/colorHint"
        android:textSize="21.3sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.560" />


    <TextView
        android:id="@+id/tv_grade"
        android:layout_width="295.3dp"
        android:layout_height="54.1dp"
        android:background="@drawable/login_input_edit_shape"
        android:text="           请选择年级"
        android:textColor="@color/colorHint"
        android:textSize="21.3sp"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/grade_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_name"
        app:layout_constraintVertical_bias="0.120"/>


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/select_icon"
        android:spinnerMode="dialog"
        android:dropDownSelector="@color/colorHint"
        android:prompt="@string/spinnerPrompt"
        app:layout_constraintEnd_toEndOf="@+id/tv_grade"
        app:layout_constraintHorizontal_bias="0.939"
        app:layout_constraintStart_toStartOf="@+id/tv_grade"
        app:layout_constraintTop_toTopOf="@+id/tv_grade" />

    <Button
        android:id="@+id/btn_language_selection"
        android:layout_width="186.5dp"
        android:layout_height="86.8dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/language_background"
        android:text="语种选择"
        android:textColor="#ffffff"
        android:textSize="27.4sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_grade"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>