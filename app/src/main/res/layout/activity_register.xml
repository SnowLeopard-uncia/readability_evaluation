<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context=".UI.RegisterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:textSize="27sp"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.050" />

    <EditText
        android:id="@+id/et_user"
        android:layout_width="@dimen/login_input_edit_width"
        android:layout_height="@dimen/login_input_edit_height"
        android:background="@drawable/login_input_edit_shape"
        android:drawableLeft="@drawable/phone"
        android:drawablePadding="43dp"
        android:hint="@string/user_input_hint"
        android:inputType="phone"
        android:textColorHint="@color/colorHint"
        android:textSize="21.3sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.180" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="@dimen/login_input_edit_width"
        android:layout_height="@dimen/login_input_edit_height"
        android:background="@drawable/login_input_edit_shape"
        android:drawableLeft="@drawable/password_icon"
        android:drawablePadding="45dp"
        android:hint="@string/password_input_hint"
        android:inputType="textPassword"
        android:textColorHint="@color/colorHint"
        android:textSize="21.3sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_user"
        app:layout_constraintVertical_bias="0.070" />

    <EditText
        android:id="@+id/et_confirm_password"
        android:layout_width="@dimen/login_input_edit_width"
        android:layout_height="@dimen/login_input_edit_height"
        android:background="@drawable/login_input_edit_shape"
        android:drawableLeft="@drawable/password_confirm"
        android:drawablePadding="45dp"
        android:hint="@string/password_confirm_hint"
        android:inputType="textPassword"
        android:textColorHint="@color/colorHint"
        android:textSize="21.3sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_password"
        app:layout_constraintVertical_bias="0.085" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="295.3dp"
        android:layout_height="54.1dp"
        android:background="@drawable/login_input_edit_shape"
        android:drawableLeft="@drawable/name_icon"
        android:drawablePadding="45dp"
        android:hint="@string/name_input_hint"
        android:textColorHint="@color/colorHint"
        android:textSize="21.3sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_confirm_password"
        app:layout_constraintVertical_bias="0.100" />

    <TextView
        android:id="@+id/tv_grade"
        android:layout_width="295.3dp"
        android:layout_height="54.1dp"
        android:background="@drawable/login_input_edit_shape"
        android:text="@string/grade_select_hint"
        android:textColor="@color/colorHint"
        android:textSize="21.3sp"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/grade_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_name"
        app:layout_constraintVertical_bias="0.130"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/select_icon"
        android:spinnerMode="dialog"
        android:dropDownSelector="@color/colorHint"
        android:prompt="@string/spinnerPrompt"
        app:layout_constraintEnd_toEndOf="@+id/tv_grade"
        app:layout_constraintHorizontal_bias="0.939"
        app:layout_constraintStart_toStartOf="@+id/tv_grade"
        app:layout_constraintTop_toTopOf="@+id/tv_grade" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="186.5dp"
        android:layout_height="86.8dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/bg_btn_language_select"
        android:text="@string/language_select"
        android:textColor="@color/text_color"
        android:textSize="27.4sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_grade"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>