<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="105dp"
    android:layout_height="123dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/iv_book_shape"
        android:layout_width="89dp"
        android:layout_height="77dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"/>

    <ImageView
        android:layout_width="19.2dp"
        android:layout_height="19.7dp"
        android:src="@drawable/book_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.126" />

    <TextView
        android:id="@+id/tv_level"
        android:layout_width="19.2dp"
        android:layout_height="16.6dp"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="#FFFF00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.125"/>

    <ImageView
        android:id="@+id/iv_lock"
        android:layout_width="11.7dp"
        android:layout_height="12.69dp"
        android:src="@drawable/book_lock"
        app:layout_constraintBottom_toBottomOf="@id/iv_book_shape"
        app:layout_constraintEnd_toEndOf="@id/iv_book_shape"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8"  />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="12dp"
        android:src="@drawable/coin"
        app:layout_constraintBottom_toBottomOf="@id/iv_book_shape"
        app:layout_constraintEnd_toEndOf="@id/iv_book_shape"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.1" />

    <TextView
        android:id="@+id/tv_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_book_shape"
        app:layout_constraintEnd_toEndOf="@id/iv_book_shape"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.15"  />
</androidx.constraintlayout.widget.ConstraintLayout>