<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    tools:context=".UI.LoginActivity">

    <ImageView
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:src="@drawable/login_person"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.085" />

    <EditText
        android:id="@+id/et_user"
        android:layout_width="@dimen/login_input_edit_width"
        android:layout_height="@dimen/login_input_edit_height"
        android:background="@drawable/login_input_edit_shape"
        android:drawableLeft="@drawable/phone"
        android:drawablePadding="38.27dp"
        android:hint="@string/user_input_hint"
        android:textColorHint="@color/colorHint"
        android:textSize="@dimen/login_input_edit_text_size"
        android:inputType="phone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.50" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="@dimen/login_input_edit_width"
        android:layout_height="@dimen/login_input_edit_height"
        android:background="@drawable/login_input_edit_shape"
        android:textSize="@dimen/login_input_edit_text_size"
        android:hint="@string/password_input_hint"
        android:textColorHint="@color/colorHint"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/password_icon"
        android:drawablePadding="39dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_user"
        app:layout_constraintVertical_bias="0.106" />

    <LinearLayout
        android:layout_width="57.85dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.805"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_password">

        <TextView
            android:id="@+id/to_register_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13.35dp"
            android:layout_gravity="center"
            android:text="@string/jump_to_register_text"
            android:textColor="#fff602"
            android:textSize="13.35sp"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.89dp"
            android:background="#fff602"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="112.4dp"
        android:layout_height="73.15dp"
        android:layout_marginTop="85dp"
        android:background="@drawable/login_box"
        android:text="@string/login"
        android:textColor="@color/text_color"
        android:textSize="24.38sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_password" />

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/login_check_box_shape"
        android:checked="false"
        android:paddingLeft="6.09dp"
        android:text="@string/agreeProtocol"
        android:textColor="@color/colorText"
        android:textSize="14.24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login"
        app:layout_constraintVertical_bias="0.290" />

</androidx.constraintlayout.widget.ConstraintLayout>